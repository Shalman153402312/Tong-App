<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cha"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:text="চা"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:background="@drawable/chaa"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/cigg"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:text="বিস্কুট"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:background="@drawable/biscuit"
                android:textSize="30sp"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/cigg"
                android:gravity="center_vertical"
                android:text="সিগারেট"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/ruti"
                android:gravity="center_vertical"
                android:text="রুটি ও কেক"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:text="কলা"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:background="@drawable/banana"
                android:textSize="30sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:text="চিপস"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:background="@drawable/chips"
                android:textSize="30sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:text="বেকারি"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:background="@drawable/bakery"
                android:textSize="30sp"
                />



        </LinearLayout>


</ScrollView>